    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  	<%= render "partials/navigation" %>
    <!-- Mensajes flash Devise -->

    <!-- AquÃ­ se va a mostrar un display none en caso de que no haya un notice o alert -->
