<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div>
			<%= message %>
		</div>
	<% end %>
	<div>
		<%= f.text_field :title, placeholder: "Título" %>
	</div>
	<div>
		<%= f.text_area :body, placeholder: "Escribe aquí el artículo" %>
	</div>
	<div>
	<%= f.submit "Guardar" %>
	</div>
<% end %>